<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/overall_margin">

    <TextView
        android:id="@+id/detailLongName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_weight="2"
        android:textSize="@dimen/textsize_big"
        tools:text="Swisse Men's Ultivite 120 Tablets"/>

    <ImageView
        android:id="@+id/detailImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srcCompat="@drawable/sws002"
        android:scaleType="fitCenter"
        android:contentDescription="@string/product_image"
        android:layout_weight="8"/>

    <CheckBox
        android:id="@+id/favouriteCheckBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/overall_margin"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:text="@string/is_your_favourite"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textsize_medium"/>

    <FrameLayout
        android:id="@+id/placeHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"/>

</LinearLayout>
