<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/item_height"
              android:layout_marginTop="@dimen/overall_margin"
              android:layout_marginBottom="@dimen/overall_margin">

    <TextView
        android:id="@+id/shortName"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_weight="8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textsize_medium"
        tools:text="Children's Ultivite 120 tabs"/>

    <TextView
        android:id="@+id/cmw_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/textsize_medium"
        tools:text="100"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/pl_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textsize_medium"
        tools:text="100"/>

    <TextView
        android:id="@+id/fl_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/textsize_medium"
        tools:text="100"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tw_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/textsize_medium"
        tools:text="100"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/hw_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/textsize_medium"
        tools:text="100"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/favoriteImage"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_weight="1"
        android:contentDescription="@string/favourite_icon"
        android:src="@drawable/ic_favorite_heart"/>

</LinearLayout>