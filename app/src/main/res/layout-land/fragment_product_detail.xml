<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/overall_margin">

    <TextView
        android:id="@+id/detailLongName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="@dimen/overall_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textsize_big"
        tools:text="Swisse Men's Ultivite 120 Tablets"/>

    <CheckBox
        android:id="@+id/favouriteCheckBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="is your favourite?"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textsize_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/detailImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/overall_margin"
            android:layout_weight="2"
            app:srcCompat="@drawable/sws002"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailCMWLabel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/overall_margin"
                android:gravity="center"
                android:text="@string/chemist_warehouse"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_medium"/>

            <TextView
                android:id="@+id/detailPLLabel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/overall_margin"
                android:gravity="center"
                android:text="@string/priceline_pharmacy"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_medium"/>

            <TextView
                android:id="@+id/detailFLLabel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/overall_margin"
                android:gravity="center"
                android:text="@string/pharmacy_4less"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_medium"/>

            <TextView
                android:id="@+id/detailTWLabel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/overall_margin"
                android:gravity="center"
                android:text="@string/terrywhite_chemmart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_medium"/>

            <TextView
                android:id="@+id/detailHWLabel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/overall_margin"
                android:gravity="center"
                android:text="@string/healthyworld_pharmacy"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_medium"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailCMWPrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/overall_margin"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_medium"
                tools:text="$99.99"/>

            <TextView
                android:id="@+id/detailPLPrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/overall_margin"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_medium"
                tools:text="$99.99"/>

            <TextView
                android:id="@+id/detailFLPrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/overall_margin"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_medium"
                tools:text="$99.99"/>

            <TextView
                android:id="@+id/detailTWPrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/overall_margin"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_medium"
                tools:text="$99.99"/>

            <TextView
                android:id="@+id/detailHWPrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/overall_margin"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_medium"
                tools:text="$99.99"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/cwh_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Website"
                android:textSize="@dimen/textsize_small"/>

            <Button
                android:id="@+id/pl_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Website"
                android:textSize="@dimen/textsize_small"/>

            <Button
                android:id="@+id/fl_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Website"
                android:textSize="@dimen/textsize_small"/>

            <Button
                android:id="@+id/tw_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Website"
                android:textSize="@dimen/textsize_small"/>

            <Button
                android:id="@+id/hw_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Website"
                android:textSize="@dimen/textsize_small"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>